<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTest1.NewHighScorePage"
             Title="New High Score">
    <VerticalStackLayout
        Padding="20"
        BackgroundColor="{StaticResource OffWhite1}">
        <Label
            x:Name="VictoryText"
            HorizontalOptions="Center" 
            HorizontalTextAlignment="Center"/>
        <Entry 
            x:Name="RecordName"
            Margin="0, 40, 0, 0"
            Placeholder="Anonymous"
            MaxLength="12"/>
        <Button 
            x:Name="OKButton"
            Text="OK"
            Padding="5"
            Margin="0, 20, 0, 0"
            CornerRadius="0"
            HeightRequest="30"
            WidthRequest="75"
            VerticalOptions="End"
            TextColor="Black"
            BackgroundColor="{StaticResource OffWhite1}"
            BorderColor="{StaticResource Gray1}"/>
    </VerticalStackLayout>
</ContentPage>